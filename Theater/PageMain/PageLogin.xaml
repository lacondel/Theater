<Page x:Class="theater.PageMain.PageLogin"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:theater"
      mc:Ignorable="d" 
      d:DesignHeight="350" d:DesignWidth="800"
      Title="PageLogin">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBox x:Name="login" TextWrapping="Wrap" Text="" local:TextBoxExtensions.Hint="Введите логин"/>
            <PasswordBox x:Name="password"/>
            <Button Content="Войти" Style="{StaticResource baseButtonStyle}" Click="Button_Click"/>
            <Button Content="Регистрация" Style="{StaticResource baseButtonStyle}" Click="Button_Click_1"/>
        </StackPanel>

    </Grid>
</Page>
