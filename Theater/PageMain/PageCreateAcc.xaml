<Page x:Class="theater.PageMain.PageCreateAcc"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:theater"
      mc:Ignorable="d" 
      d:DesignHeight="350" d:DesignWidth="800"
      Title="PageCreateAcc">

    <Grid>
        <StackPanel Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBox x:Name="regName" local:TextBoxExtensions.Hint="Введите имя"/>
            <TextBox x:Name="contacts" local:TextBoxExtensions.Hint="Введите телефон"/>
            <TextBox x:Name="regLogin" local:TextBoxExtensions.Hint="Введите логин"/>
            <PasswordBox x:Name="regPass" PasswordChanged="rpChanged"/>
            <PasswordBox x:Name="regPassRepeat" PasswordChanged="rprChanged"/>
            <Button x:Name="btnCreate" HorizontalAlignment="Center" Background="Green" IsEnabled="False" Click="btnCreate_Click" Style="{StaticResource baseButtonStyle}">Создать</Button>
            <Button Click="Button_Click" Style="{StaticResource baseButtonStyle}">Вернуться</Button>
        </StackPanel>
    </Grid>
</Page>
