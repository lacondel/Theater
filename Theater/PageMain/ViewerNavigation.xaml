<Page x:Class="theater.PageMain.ViewerNavigation"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:theater.PageMain"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ViewerNavigation">

    <Grid>
        <StackPanel Orientation="Horizontal">
            <Button x:Name="btnShowtimes" Style="{StaticResource navButton}" Click="btnShowtimes_Click" Content="Показы"/>
            <Button x:Name="btnPerformances" Style="{StaticResource navButton}" Click="btnPerformances_Click">Спектакли</Button>
            <Button x:Name="btnActors" Style="{StaticResource navButton}" Click="btnActors_Click">Актёры</Button>
            <Button x:Name="btnSponsors" Style="{StaticResource navButton}" Click="btnSponsors_Click">Спонсоры</Button>
        </StackPanel>
    </Grid>
</Page>
