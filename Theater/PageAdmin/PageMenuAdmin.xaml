<Page x:Class="theater.PageAdmin.PageMenuAdmin"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:theater.PageAdmin"
      mc:Ignorable="d" 
      d:DesignHeight="350" d:DesignWidth="200"
      Title="PageMenuAdmin">

    <Grid>
        <StackPanel x:Name="adminStackPanel" Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button x:Name="btnAddActor" Click="btnAddActor_Click">Добавить актёр</Button>
            <Button x:Name="btnAddAdmin" Click="btnAddAdmin_Click">Добавить админа</Button>
            <Button x:Name="btnAddPerformance" Click="btnAddPerformance_Click">Добавить спектакль</Button>
            <Button x:Name="btnAddShowtime" Click="btnAddShowtime_Click">Добавить представление</Button>
        </StackPanel>
    </Grid>
</Page>
